// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category{
    id String @default(uuid()) @unique
    name String

    drinks Drink []
}

model Drink{
    id String @default(uuid()) @unique
    name String 
    desc String
    img String
    nutritionFacts Json?

    category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
    categoryId String
}

model Location{
    id String @default(uuid()) @unique
    name String
    address String
    hours String
    memo String?
    coordiatesLat Int
    coordinatesLong Int

    region Region @relation(fields: [regionId], references: [id], onDelete: Cascade)
    regionId String
}

model Region {
    id String @default(uuid()) @unique
    name String

    locations Location[]
}

